---
import sponsors from "@/data/sponsors.json";

// Filter sponsors with level >= 4 (Platinum sponsors)
const platinumSponsors = sponsors.filter((sponsor) => sponsor.level >= 4);
---

<div class="max-w-content mx-auto px-6 lg:px-8 pb-12 pt-0 bg-white">
  <!-- tspo used because adblock blocks the word sponsor -->
  <div class="flex flex-wrap justify-center items-center gap-8 mx-auto max-w-6xl mb-8">
    {
      platinumSponsors.map((sponsor) => (
        <div class="w-40 md:w-48 lg:w-56 shrink-0">
          <a
            href={sponsor.rurl}
            target="_blank"
            rel="noopener noreferrer"
            class="block hover:opacity-75 transition-opacity"
          >
            <img src={`/${sponsor.image_path}`} alt={`${sponsor.name} logo`} class="w-full h-auto" />
          </a>
        </div>
      ))
    }
  </div>
  <p class="text-center text-sm">
    <em>
      <a href="/sponsors" class="text-mrover-base hover:text-mrover-accent transition-colors font-semibold">See All Sponsors</a>
    </em>
  </p>
</div>
