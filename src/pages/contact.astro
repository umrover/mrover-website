---
import BaseLayout from "@/layouts/BaseLayout.astro";

const executives = [
  { title: "President", name: "Isabel Boncher", email: "iboncher@umich.edu" },
  { title: "Vice President", name: "Caden Burkhardt", email: "cadenb@umich.edu" },
  { title: "Chief Engineer", name: "Neven Johnson", email: "neven@umich.edu" },
  { title: "External Relations Officer", name: "Riya Desai", email: "riyad@umich.edu" },
  { title: "Treasurer", name: "Vanya Krishna", email: "vanyak@umich.edu" },
];
---

<BaseLayout title="Contact - University of Michigan Mars Rover Team">
  <div class="relative min-h-screen flex items-center justify-center">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/festifall2022.jpg');"></div>
    <div class="absolute inset-0 bg-linear-to-b from-black/70 to-[#0a0808]/95"></div>

    <div class="relative z-10 w-full max-w-[1000px] mx-auto px-8 py-24">
      <!-- Team Contact -->
      <section class="text-center mb-20">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold uppercase text-white mb-6" style="text-shadow: 0 0 40px rgba(255, 140, 0, 0.3);">
          Contact Us
        </h1>
        <a href="mailto:rover@umich.edu" class="inline-block text-xl md:text-2xl font-semibold text-mrover-accent mb-8 hover:opacity-80 transition-opacity">
          rover@umich.edu
        </a>
        <div class="text-white/70 leading-relaxed">
          <p>University of Michigan</p>
          <p>Wilson Student Team Project Center</p>
          <p>2603 Draper, Ann Arbor, MI 48109-2101</p>
        </div>
      </section>

      <!-- Executive Board -->
      <section class="text-center">
        <h2 class="text-2xl md:text-3xl font-bold uppercase text-white mb-10 tracking-wide">
          Executive Board
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
          {executives.map((exec) => (
            <div class="bg-white/3 border border-white/10 rounded-lg p-6 flex flex-col gap-2 transition-all hover:border-mrover-accent/40 hover:bg-mrover-accent/5 hover:-translate-y-0.5">
              <span class="text-xs font-semibold uppercase tracking-wider text-mrover-accent">
                {exec.title}
              </span>
              <span class="text-lg font-medium text-white">
                {exec.name}
              </span>
              <a href={`mailto:${exec.email}`} class="text-sm text-white/50 hover:text-mrover-accent transition-colors">
                {exec.email}
              </a>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
