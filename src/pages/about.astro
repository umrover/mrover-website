---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SceneManager } from "@/components/about/SceneManager";
import { BRANCHES } from "@/components/about/SceneConfig";
---

<BaseLayout title="About - University of Michigan Mars Rover Team">
  <div class="about-content-wrapper relative font-rajdhani" style="clip-path: inset(0);">
    <SceneManager client:only="react" />

    <main class="relative z-[1] text-white">
      {BRANCHES.map((branch) => (
        <div
          class="branch-wrapper relative"
          data-branch={branch.name}
          style={`height: calc(${branch.sections.length} * 100dvh); --branch-color: ${branch.color}; --branch-accent: ${branch.accent};`}
        >
          <div class="sticky top-0 h-dvh overflow-hidden flex flex-col">
            <div class="branch-slides flex flex-1 items-stretch">
              {branch.sections.map((section) => (
                <section
                  class={`min-w-full w-full h-dvh flex flex-col p-0 px-16 pb-16 box-border pointer-events-none shrink-0 ${section.name === 'mission-intro' ? 'justify-center items-center' : 'justify-end items-end'}`}
                  data-id={section.name}
                >
                  {section.name === 'mission-intro' ? (
                    <div class="flex flex-col items-center">
                      <h1 class="intro-title text-white m-0 leading-none tracking-[0.02em] text-center flex flex-col items-center select-none uppercase font-bold" style="font-family: 'Panchang', sans-serif; font-size: clamp(2.5rem, 12vw, 8rem);">
                        {(section.label || '').split(' ').map((word: string, wordIndex: number) => (
                          <div class="block overflow-hidden" style={`--word-index: ${wordIndex}`}>
                            {word.split('').map((char: string, charIndex: number) => (
                              <span class="char inline-block" style={`--char-index: ${charIndex}; --word-index: ${wordIndex}`}>
                                {char}
                              </span>
                            ))}
                          </div>
                        ))}
                      </h1>
                    </div>
                  ) : section.name === 'mission' ? (
                    <div class="card w-[500px] min-h-[180px] p-6 bg-[#0e0e0e]/50 backdrop-blur-md text-white pointer-events-auto flex flex-col" style={`border: 1px solid var(--branch-accent, rgba(255,255,255,0.3));`}>
                      <h2 class="text-3xl font-semibold uppercase leading-tight mb-4 break-keep" style={`font-family: 'Panchang', sans-serif; color: var(--branch-accent, #FF8C00);`}>Our Mission</h2>
                      <p class="text-xl leading-relaxed text-white/90 m-0">{section.description}</p>
                    </div>
                  ) : (
                    <div class="card w-[500px] min-h-[180px] p-6 bg-[#0e0e0e]/50 backdrop-blur-md text-white pointer-events-auto flex flex-col" style={`border: 1px solid var(--branch-accent, rgba(255,255,255,0.3));`}>
                      <h2 class="text-3xl font-semibold uppercase leading-tight mb-4 break-keep" style={`font-family: 'Panchang', sans-serif; color: var(--branch-accent, #FF8C00);`}>{section.subteam?.name}</h2>
                      <p class="text-xl leading-relaxed text-white/90 m-0">{section.subteam?.desc}</p>
                    </div>
                  )}
                </section>
              ))}
            </div>
          </div>
        </div>
      ))}
    </main>

    <script>
      function clamp(min: number, input: number, max: number) {
        return Math.max(min, Math.min(input, max))
      }

      function lerp(start: number, end: number, factor: number) {
        return start + (end - start) * factor
      }

      document.querySelectorAll('.branch-wrapper').forEach((wrapper) => {
        const slides = wrapper.querySelector('.branch-slides') as HTMLElement
        const sections = slides?.querySelectorAll('section') as NodeListOf<HTMLElement>

        if (!slides || !sections || sections.length <= 1) return

        let currentX = 0
        let targetX = 0
        const damping = 0.18

        const updateTarget = () => {
          const rect = wrapper.getBoundingClientRect()
          const wrapperHeight = wrapper.clientHeight
          const vh = window.visualViewport?.height || window.innerHeight

          const scrolledIntoWrapper = -rect.top
          const scrollableDistance = wrapperHeight - vh

          let progress = scrolledIntoWrapper / scrollableDistance
          progress = clamp(0, progress, 1)

          const slidesWidth = slides.scrollWidth
          const maxX = slidesWidth - window.innerWidth
          targetX = progress * maxX
        }

        const animate = () => {
          currentX = lerp(currentX, targetX, damping)
          slides.style.transform = `translateX(${-currentX}px)`
          requestAnimationFrame(animate)
        }

        window.addEventListener('scroll', updateTarget, { passive: true })
        window.addEventListener('resize', updateTarget)
        updateTarget()
        animate()
      })
    </script>
  </div>
</BaseLayout>

<style>
  @import '@/styles/panchang.css';

  :global(footer) {
    display: none;
  }

  :global(header) {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }

  :global(html),
  :global(body) {
    overscroll-behavior: none;
    -webkit-overflow-scrolling: auto;
  }

  :global(body) {
    touch-action: pan-x pan-y;
  }

  .char {
    opacity: 0;
    transform: translateY(100%) rotateX(-90deg);
    animation: char-reveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: calc(0.4s + var(--word-index) * 0.3s + var(--char-index) * 0.05s);
  }

  @keyframes char-reveal {
    0% {
      opacity: 0;
      transform: translateY(100%) rotateX(-90deg);
    }
    100% {
      opacity: 1;
      transform: translateY(0) rotateX(0deg);
    }
  }

  @media (max-width: 800px) {
    section {
      padding: 0 1.5rem 2rem 1.5rem !important;
      align-items: flex-start !important;
    }

    .card {
      width: calc(100vw - 3rem) !important;
      max-width: none;
    }

    .card h2 {
      font-size: 1.4rem !important;
    }

    .card p {
      font-size: 1.1rem !important;
    }
  }
</style>
