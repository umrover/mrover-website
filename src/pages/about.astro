---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SceneManager } from "@/components/about/SceneManager";
import { BRANCHES } from "@/components/about/SceneConfig";
---

<BaseLayout title="About - University of Michigan Mars Rover Team">
  <div class="about-content-wrapper">
    <SceneManager client:only="react" />

    <main class="relative z-10">
      {BRANCHES.map((branch) => (
        <div
          class="branch-wrapper"
          data-branch={branch.name}
          style={`--branch-sections: ${branch.sections.length}; --branch-color: ${branch.color}; --branch-accent: ${branch.accent};`}
        >
          <div class="branch-inner">
            <div class="branch-label">{branch.name}</div>
            <div class="branch-slides">
              {branch.sections.map((section) => (
                <section class="content-section" data-id={section.name}>
                  {section.name === 'mission-intro' ? (
                    <div class="mission-intro-content">
                      <h1>{section.label}</h1>
                    </div>
                  ) : section.name === 'mission' ? (
                    <div class="mission-content">
                      <p class="mission-description">{section.description}</p>
                    </div>
                  ) : (
                    <div class="subteam-content">
                      <h2 class="section-title">
                        {section.subteam?.name}
                      </h2>
                      <div class="description-box">
                        <p>{section.subteam?.desc}</p>
                      </div>
                    </div>
                  )}
                </section>
              ))}
            </div>
          </div>
        </div>
      ))}
    </main>

    <script>
      function clamp(min: number, input: number, max: number) {
        return Math.max(min, Math.min(input, max))
      }

      document.querySelectorAll('.branch-wrapper').forEach((wrapper) => {
        const slides = wrapper.querySelector('.branch-slides') as HTMLElement
        const sections = slides?.querySelectorAll('.content-section')

        if (!slides || !sections || sections.length <= 1) return

        const updateHorizontalScroll = () => {
          const rect = wrapper.getBoundingClientRect()
          const wrapperHeight = wrapper.clientHeight
          const windowHeight = window.innerHeight

          const scrolledIntoWrapper = -rect.top
          const scrollableDistance = wrapperHeight - windowHeight

          let progress = scrolledIntoWrapper / scrollableDistance
          progress = clamp(0, progress, 1)

          const slidesWidth = slides.scrollWidth
          const maxX = slidesWidth - window.innerWidth
          const x = progress * maxX

          slides.style.transform = `translateX(${-x}px)`
        }

        window.addEventListener('scroll', updateHorizontalScroll, { passive: true })
        window.addEventListener('resize', updateHorizontalScroll)
        updateHorizontalScroll()
      })

      const missionBranch = document.querySelector('[data-branch="Mission"]')
      const introTitle = document.querySelector('.mission-intro-content h1') as HTMLElement
      const missionDesc = document.querySelector('.mission-description') as HTMLElement

      if (missionBranch && introTitle && missionDesc) {
        const updateMissionAnimations = () => {
          const rect = missionBranch.getBoundingClientRect()
          const wrapperHeight = missionBranch.clientHeight
          const windowHeight = window.innerHeight

          const scrolledIntoWrapper = -rect.top
          const scrollableDistance = wrapperHeight - windowHeight

          let progress = scrolledIntoWrapper / scrollableDistance
          progress = clamp(0, progress, 1)

          introTitle.style.opacity = String(1 - progress)
          introTitle.style.transform = `scale(${1 - progress * 0.2}) translateY(${-progress * 50}px)`

          missionDesc.style.opacity = String(progress)
          missionDesc.style.transform = `translateX(${(1 - progress) * -100}px)`
        }

        window.addEventListener('scroll', updateMissionAnimations, { passive: true })
        updateMissionAnimations()
      }
    </script>
  </div>
</BaseLayout>

<style>
  @import url('https://api.fontshare.com/v2/css?f[]=panchang@400,500,600,700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

  .about-content-wrapper {
    position: relative;
    clip-path: inset(0);
    font-family: 'Rajdhani', system-ui, -apple-system, sans-serif;
  }

  :global(footer) {
    display: none;
  }

  :global(header) {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }

  main {
    position: relative;
    z-index: 1;
    color: white;
  }

  .branch-wrapper {
    height: calc(var(--branch-sections) * 100vh);
    position: relative;
  }

  .branch-inner {
    position: sticky;
    top: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .branch-label {
    position: absolute;
    top: 80px;
    left: 4rem;
    font-family: 'Panchang', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--branch-accent);
    text-shadow: 0 2px 8px rgba(0,0,0,0.8);
    z-index: 10;
  }

  .branch-slides {
    display: flex;
    flex: 1;
    align-items: stretch;
  }

  .content-section {
    min-width: 100vw;
    width: 100vw;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0 4rem 6rem 4rem;
    box-sizing: border-box;
    pointer-events: none;
    flex-shrink: 0;
  }

  .content-section[data-id="mission-intro"] {
    justify-content: center;
    align-items: center;
  }

  .mission-intro-content {
    text-align: center;
    pointer-events: none;
  }

  .mission-intro-content h1 {
    font-family: 'Panchang', sans-serif;
    font-size: 8rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0;
    line-height: 0.9;
    letter-spacing: 0.02em;
  }

  .content-section[data-id="mission"] {
    justify-content: flex-end;
    align-items: flex-start;
  }

  .mission-content {
    text-align: left;
    max-width: 500px;
    pointer-events: auto;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.2) 100%);
    border-left: 2px solid rgba(255, 140, 0, 0.6);
    backdrop-filter: blur(8px);
  }

  .mission-description {
    font-family: 'Rajdhani', sans-serif;
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    font-weight: 500;
    letter-spacing: 0.02em;
    margin: 0;
  }

  .subteam-content {
    max-width: 800px;
    pointer-events: auto;
  }

  .section-title {
    font-size: 4.5rem;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1;
    text-transform: uppercase;
    text-shadow: 0 4px 16px rgba(0,0,0,0.9);
  }

  .description-box p {
    font-size: 1.25rem;
    color: #ffffff;
    line-height: 1.6;
    font-weight: 400;
    max-width: 500px;
    text-shadow: 0 2px 8px rgba(0,0,0,0.9);
  }

  :global(html) {
    overscroll-behavior: none;
  }


  @media (max-width: 768px) {
    .branch-label {
      left: 1rem;
      top: 70px;
      font-size: 0.75rem;
      letter-spacing: 0.2em;
    }

    .content-section {
      padding: 0 1rem 2rem 1rem;
    }

    .mission-intro-content h1 {
      font-size: 3rem;
    }

    .mission-content {
      padding: 1.25rem;
      max-width: 100%;
    }

    .mission-description {
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .subteam-content {
      max-width: 100%;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .description-box p {
      font-size: 0.95rem;
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .branch-label {
      font-size: 0.65rem;
      letter-spacing: 0.15em;
    }

    .mission-intro-content h1 {
      font-size: 2.25rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .description-box p {
      font-size: 0.9rem;
    }
  }
</style>
