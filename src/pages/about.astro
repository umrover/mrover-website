---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SceneManager } from "@/components/about/SceneManager";
import { SECTION_TARGETS } from "@/components/about/SceneConfig";
---

<BaseLayout title="About - University of Michigan Mars Rover Team">
  <div class="about-content-wrapper">
    <SceneManager client:only="react" />

    <main class="relative z-10">
      {SECTION_TARGETS.map((section) => (
        <section class="content-section" data-id={section.name}>
          {section.name === 'mission-intro' ? (
            <div class="mission-intro-content">
              <h1>{section.label}</h1>
            </div>
          ) : section.name === 'mission' ? (
            <div class="mission-content">
              <p class="mission-description">{section.description}</p>
            </div>
          ) : (
            <div class="subteam-content">
              <div class="team-eyebrow" style={`color: ${section.subteam?.accent}`}>
                {section.subteam?.teamName}
              </div>
              <h2 class="section-title">
                {section.subteam?.name}
              </h2>
              <div class="description-box">
                <p>{section.subteam?.desc}</p>
              </div>
            </div>
          )}
        </section>
      ))}
    </main>

    <script>
      import { gsap } from 'gsap'
      import { ScrollTrigger } from 'gsap/ScrollTrigger'

      gsap.registerPlugin(ScrollTrigger)

      const introSection = document.querySelector('[data-id="mission-intro"]')
      const missionSection = document.querySelector('[data-id="mission"]')
      const introTitle = document.querySelector('.mission-intro-content h1')
      const missionDesc = document.querySelector('.mission-description')

      if (introSection && missionSection && introTitle && missionDesc) {
        gsap.set(missionDesc, { opacity: 0, x: -100 })

        gsap.to(introTitle, {
          scrollTrigger: {
            trigger: missionSection,
            start: 'top bottom',
            end: 'top center',
            scrub: 1,
          },
          opacity: 0,
          scale: 0.8,
          y: -50,
        })

        gsap.to(missionDesc, {
          scrollTrigger: {
            trigger: missionSection,
            start: 'top 80%',
            end: 'top 30%',
            scrub: 1,
          },
          opacity: 1,
          x: 0,
        })
      }
    </script>
  </div>
</BaseLayout>

<style>
  @import url('https://api.fontshare.com/v2/css?f[]=panchang@400,500,600,700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

  .about-content-wrapper {
    position: relative;
    clip-path: inset(0);
    font-family: 'Rajdhani', system-ui, -apple-system, sans-serif;
  }

  :global(footer) {
    display: none; /* Hide footer to fix scroll snapping logic */
  }

  /* Make header overlay for immersive experience and perfect scroll alignment */
  :global(header) {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }

  main {
    position: relative;
    z-index: 1;
    color: white;
  }

  .content-section {
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Align content to bottom */
    padding: 0 4rem 6rem 4rem; /* Bottom padding for breathing room */
    position: relative;
    box-sizing: border-box;
    pointer-events: none; /* Allow clicks to pass through to canvas */
  }

  /* Mission Intro - centered title only */
  .content-section[data-id="mission-intro"] {
    justify-content: center;
    align-items: center;
  }

  .mission-intro-content {
    text-align: center;
    pointer-events: none;
  }

  .mission-intro-content h1 {
    font-family: 'Panchang', sans-serif;
    font-size: 8rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0;
    line-height: 0.9;
    letter-spacing: 0.02em;
  }

  /* Mission section - description slides in */
  .content-section[data-id="mission"] {
    justify-content: flex-end;
    align-items: flex-start;
  }

  .mission-content {
    text-align: left;
    max-width: 500px;
    pointer-events: auto;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.2) 100%);
    border-left: 2px solid rgba(255, 140, 0, 0.6);
    backdrop-filter: blur(8px);
  }

  .mission-description {
    font-family: 'Rajdhani', sans-serif;
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    font-weight: 500;
    letter-spacing: 0.02em;
    margin: 0;
  }

  /* Subteam Content Styling */
  .subteam-content {
    max-width: 800px;
    pointer-events: auto;
  }

  .team-eyebrow {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.8);
  }

  .section-title {
    font-size: 4.5rem;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1;
    text-transform: uppercase;
    text-shadow: 0 4px 16px rgba(0,0,0,0.9);
  }

  .description-box p {
    font-size: 1.25rem;
    color: #ffffff;
    line-height: 1.6;
    font-weight: 400;
    max-width: 500px;
    text-shadow: 0 2px 8px rgba(0,0,0,0.9);
  }

  :global(html) {
    overscroll-behavior: none;
  }

  @media (max-width: 768px) {
    .content-section {
      padding: 0 1rem 3rem 1rem;
    }

    .mission-intro-content h1 {
      font-size: 3.5rem;
    }

    .mission-content {
      padding: 1.5rem;
      max-width: 100%;
    }

    .mission-description {
      font-size: 0.95rem;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .description-box p {
      font-size: 1rem;
    }
  }
</style>
