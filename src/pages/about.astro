---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SceneManager } from "@/components/about/SceneManager";
import { BRANCHES } from "@/components/about/SceneConfig";
---

<BaseLayout title="About - University of Michigan Mars Rover Team">
  <div class="about-content-wrapper">
    <SceneManager client:only="react" />

    <main class="relative z-10">
      {BRANCHES.map((branch) => (
        <div
          class="branch-wrapper"
          data-branch={branch.name}
          style={`--branch-sections: ${branch.sections.length}; --branch-color: ${branch.color}; --branch-accent: ${branch.accent};`}
        >
          <div class="branch-inner">
            <div class="branch-label">{branch.name}</div>
            <div class="branch-slides">
              {branch.sections.map((section) => (
                <section class="slide" data-id={section.name}>
                  {section.name === 'mission-intro' ? (
                    <div class="slide-intro">
                      <h1>{section.label}</h1>
                    </div>
                  ) : section.name === 'mission' ? (
                    <div class="card">
                      <h2 class="card-title">Our Mission</h2>
                      <p class="card-desc">{section.description}</p>
                    </div>
                  ) : (
                    <div class="card">
                      <h2 class="card-title">{section.subteam?.name}</h2>
                      <p class="card-desc">{section.subteam?.desc}</p>
                    </div>
                  )}
                </section>
              ))}
            </div>
          </div>
        </div>
      ))}
    </main>

    <script>
      function clamp(min: number, input: number, max: number) {
        return Math.max(min, Math.min(input, max))
      }

      function lerp(start: number, end: number, factor: number) {
        return start + (end - start) * factor
      }

      document.querySelectorAll('.branch-wrapper').forEach((wrapper) => {
        const slides = wrapper.querySelector('.branch-slides') as HTMLElement
        const sections = slides?.querySelectorAll('.slide') as NodeListOf<HTMLElement>

        if (!slides || !sections || sections.length <= 1) return

        let currentX = 0
        let targetX = 0
        const damping = 0.1

        const updateTarget = () => {
          const rect = wrapper.getBoundingClientRect()
          const wrapperHeight = wrapper.clientHeight
          const vh = window.visualViewport?.height || window.innerHeight

          const scrolledIntoWrapper = -rect.top
          const scrollableDistance = wrapperHeight - vh

          let progress = scrolledIntoWrapper / scrollableDistance
          progress = clamp(0, progress, 1)

          const slidesWidth = slides.scrollWidth
          const maxX = slidesWidth - window.innerWidth
          targetX = progress * maxX
        }

        const animate = () => {
          currentX = lerp(currentX, targetX, damping)
          slides.style.transform = `translateX(${-currentX}px)`
          requestAnimationFrame(animate)
        }

        window.addEventListener('scroll', updateTarget, { passive: true })
        window.addEventListener('resize', updateTarget)
        updateTarget()
        animate()
      })
    </script>
  </div>
</BaseLayout>

<style>
  @import url('https://api.fontshare.com/v2/css?f[]=panchang@400,500,600,700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap');

  .about-content-wrapper {
    position: relative;
    clip-path: inset(0);
    font-family: 'Rajdhani', system-ui, -apple-system, sans-serif;
  }

  :global(footer) {
    display: none;
  }

  :global(header) {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }

  main {
    position: relative;
    z-index: 1;
    color: white;
  }

  .branch-wrapper {
    height: calc(var(--branch-sections) * 100dvh);
    position: relative;
  }

  .branch-inner {
    position: sticky;
    top: 0;
    height: 100dvh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .branch-label {
    position: absolute;
    top: 80px;
    left: 4rem;
    font-family: 'Panchang', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--branch-accent);
    text-shadow: 0 2px 8px rgba(0,0,0,0.8);
    z-index: 10;
  }

  .branch-slides {
    display: flex;
    flex: 1;
    align-items: stretch;
  }

  .slide {
    min-width: 100vw;
    width: 100vw;
    height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: 0 4rem 4rem 4rem;
    box-sizing: border-box;
    pointer-events: none;
    flex-shrink: 0;
  }

  .slide[data-id="mission-intro"] {
    justify-content: center;
    align-items: center;
  }

  .slide-intro h1 {
    font-family: 'Panchang', sans-serif;
    font-size: 8rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0;
    line-height: 0.9;
    letter-spacing: 0.02em;
    text-align: center;
  }

  .card {
    width: 400px;
    padding: 1.5rem;
    background: rgba(14, 14, 14, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid var(--branch-accent, rgba(255,255,255,0.3));
    color: white;
    pointer-events: auto;
  }

  .card-title {
    font-family: 'Panchang', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    line-height: 1.1;
    color: var(--branch-accent, #FF8C00);
    margin: 0 0 1rem 0;
  }

  .card-desc {
    font-family: 'Rajdhani', sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  :global(html) {
    overscroll-behavior: none;
  }

  @media (max-width: 800px) {
    .branch-label {
      left: 1rem;
      top: 70px;
      font-size: 0.7rem;
      letter-spacing: 0.15em;
    }

    .slide {
      padding: 0 1.5rem 2rem 1.5rem;
    }

    .slide-intro h1 {
      font-size: 2.5rem;
    }

    .card {
      width: calc(100vw - 3rem);
      max-width: 400px;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-desc {
      font-size: 0.95rem;
    }
  }
</style>
