---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SceneManager } from "@/components/about/SceneManager";
import { SECTION_TARGETS } from "@/components/about/SceneConfig";
---

<BaseLayout title="About - University of Michigan Mars Rover Team">
  <div class="about-content-wrapper">
    <SceneManager client:only="react" />

    <main class="relative z-10">
      {SECTION_TARGETS.map((section) => (
        <section class="content-section" data-id={section.name}>
          {section.name === 'mission' ? (
            <div class="mission-content">
              <h1>{section.label}</h1>
              <p>{section.description}</p>
            </div>
          ) : (
            <div class="subteam-content">
              <div class="team-eyebrow" style={`color: ${section.subteam?.accent}`}>
                {section.subteam?.teamName}
              </div>
              <h2 class="section-title">
                {section.subteam?.name}
              </h2>
              <div class="description-box">
                <p>{section.subteam?.desc}</p>
              </div>
            </div>
          )}
        </section>
      ))}
    </main>
  </div>
</BaseLayout>

<style>
  .about-content-wrapper {
    position: relative;
    clip-path: inset(0);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  :global(footer) {
    display: none; /* Hide footer to fix scroll snapping logic */
  }

  /* Make header overlay for immersive experience and perfect scroll alignment */
  :global(header) {
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent !important;
    border: none !important;
    box-shadow: none !important;
    backdrop-filter: none !important;
  }

  main {
    position: relative;
    z-index: 1;
    color: white;
  }

  .content-section {
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Align content to bottom */
    padding: 0 4rem 6rem 4rem; /* Bottom padding for breathing room */
    position: relative;
    box-sizing: border-box;
    pointer-events: none; /* Allow clicks to pass through to canvas */
  }

  /* Cinematic vignette for mission section */
  .content-section[data-id="mission"]::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(0,0,0,0.5) 0%, transparent 70%);
    z-index: -1;
  }

  /* Mission Content Centered */
  .content-section[data-id="mission"] {
    justify-content: center;
    align-items: center;
  }

  .mission-content {
    text-align: center;
    max-width: 900px;
    pointer-events: auto;
  }

  .mission-content h1 {
    font-size: 6rem;
    font-weight: 800;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0 0 2rem 0;
    line-height: 0.9;
    text-shadow: 0 4px 20px rgba(0,0,0,0.8);
  }

  .mission-content p {
    font-size: 1.5rem;
    color: #ffffff;
    line-height: 1.6;
    font-weight: 400;
    text-shadow: 0 2px 10px rgba(0,0,0,0.9);
  }

  /* Subteam Content Styling */
  .subteam-content {
    max-width: 800px;
    pointer-events: auto;
  }

  .team-eyebrow {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.8);
  }

  .section-title {
    font-size: 4.5rem;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1;
    text-transform: uppercase;
    text-shadow: 0 4px 16px rgba(0,0,0,0.9);
  }

  .description-box p {
    font-size: 1.25rem;
    color: #ffffff;
    line-height: 1.6;
    font-weight: 400;
    max-width: 500px;
    text-shadow: 0 2px 8px rgba(0,0,0,0.9);
  }

  :global(html) {
    overscroll-behavior: none;
  }

  @media (max-width: 768px) {
    .content-section {
      padding: 0 1.5rem 4rem 1.5rem;
    }

    .mission-content h1 {
      font-size: 3rem;
    }
    
    .mission-content p {
      font-size: 1.125rem;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .description-box p {
      font-size: 1rem;
    }
  }
</style>
