---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { StarsBackground } from "@/components/StarsBackground";
---

<BaseLayout title="Join - University of Michigan Mars Rover Team">
  <StarsBackground client:only="react" />

  <!-- Hero -->
  <div
    class="relative h-96 md:h-[500px] lg:h-[600px] bg-cover bg-center"
    style="background-image: url('/images/full-send-peace.jpg');"
  >
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <!-- Join Info -->
  <section class="py-16 md:py-20 relative z-10">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-mrover-accent mb-6">Interested in MRover?</h2>

      <p class="text-white/80 leading-relaxed mb-8 max-w-2xl mx-auto">
        Even if you don't want to make a commitment quite yet, please fill out the following form or send us an email
        indicating your interest at <a href="mailto:rover@umich.edu" class="text-mrover-accent hover:text-mrover-accent/80 font-semibold"
          >rover@umich.edu</a
        >. We would love to arrange a time to show you around.
      </p>

      <!-- Embedded Form -->
      <div class="mt-12">
        <iframe
          src="https://docs.google.com/forms/d/e/1FAIpQLSeVjjXjaIdpYK7zEsVgiC7aj347fO1PxoTExdipHdMZJhjvgw/viewform?usp=sf_link"
          class="w-full max-w-3xl h-[1400px] mx-auto border border-michigan-blue rounded-lg shadow-lg bg-white"
          title="Join MRover Form"
        >
          Loading...
        </iframe>
      </div>
    </div>
  </section>
</BaseLayout>
