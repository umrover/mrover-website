---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AllSponsors from "@/components/AllSponsors.astro";

const sponsorshipLevels = [
  {
    name: "Platinum",
    amount: "$5,000+",
    headerBg: "bg-gradient-to-br from-[#e5e4e2]/15 to-[#b4b4b4]/10",
    nameColor: "text-[#e5e4e2]",
    benefits: [
      "All Gold, Silver, and Bronze benefits",
      "Access to the team for videos and case studies",
      "Featured logo on our rover during competition",
      "Most prominent placement on website, t-shirts, and presentations",
    ],
  },
  {
    name: "Gold",
    amount: "$3,000+",
    headerBg: "bg-gradient-to-br from-[#ffd700]/15 to-[#daa520]/10",
    nameColor: "text-[#ffd700]",
    benefits: [
      "All Silver and Bronze benefits",
      "Exclusive access to recruiting events",
      "Primary logo placement on all materials",
      "Social media recognition post",
    ],
  },
  {
    name: "Silver",
    amount: "$1,000+",
    headerBg: "bg-gradient-to-br from-[#c0c0c0]/15 to-[#a9a9a9]/10",
    nameColor: "text-[#c0c0c0]",
    benefits: [
      "All Bronze benefits",
      "Secondary logo placement",
      "Exclusive meetings with the team",
    ],
  },
  {
    name: "Bronze",
    amount: "$500+",
    headerBg: "bg-gradient-to-br from-[#cd7f32]/15 to-[#b87333]/10",
    nameColor: "text-[#cd7f32]",
    benefits: [
      "Resume book of all team members",
      "Tertiary logo placement",
      "Monthly email newsletter updates",
    ],
  },
];
---

<BaseLayout title="Sponsor - University of Michigan Mars Rover Team" showFooter={false}>
  <div class="bg-[#0a0808] text-white">
    <!-- Hero -->
    <section class="relative h-[70vh] min-h-[500px] flex items-center justify-center">
      <div class="absolute inset-0 bg-cover bg-center bg-[url('/images/canyons-and-sponsors.jpg')]"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 to-[#0a0808]"></div>
      <div class="relative text-center p-8">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold uppercase mb-4 [text-shadow:0_0_40px_rgba(255,140,0,0.3)]">
          Partner With Us
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-white/70 tracking-widest !mb-10">
          Help us push the boundaries of exploration
        </p>
        <a
          href="mailto:rover@umich.edu"
          class="inline-block px-10 py-4 bg-mrover-accent text-black font-semibold uppercase tracking-wide rounded transition-all hover:bg-[#ff9f2f] hover:-translate-y-0.5 hover:shadow-[0_10px_30px_rgba(255,140,0,0.3)]"
        >
          Get in Touch
        </a>
      </div>
    </section>

    <!-- Why Sponsor -->
    <section class="py-28 bg-[#0a0808]">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold uppercase text-center tracking-wide !mb-16">
          Why Sponsor MRover?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          <div class="bg-white/[0.03] border border-white/[0.08] rounded-lg p-10 text-center transition-all hover:border-mrover-accent/30 hover:bg-mrover-accent/5">
            <div class="w-12 h-12 mx-auto mb-8 text-mrover-accent">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">Materials & Prototypes</h3>
            <p class="text-white/60 leading-relaxed">Fund cutting-edge components and rapid prototyping for our rovers</p>
          </div>
          <div class="bg-white/[0.03] border border-white/[0.08] rounded-lg p-10 text-center transition-all hover:border-mrover-accent/30 hover:bg-mrover-accent/5">
            <div class="w-12 h-12 mx-auto mb-8 text-mrover-accent">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">Outreach & Education</h3>
            <p class="text-white/60 leading-relaxed">Support STEM education and inspire the next generation of engineers</p>
          </div>
          <div class="bg-white/[0.03] border border-white/[0.08] rounded-lg p-10 text-center transition-all hover:border-mrover-accent/30 hover:bg-mrover-accent/5">
            <div class="w-12 h-12 mx-auto mb-8 text-mrover-accent">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
                <path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">Competition Travel</h3>
            <p class="text-white/60 leading-relaxed">Send our team to international rover competitions worldwide</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Sponsorship Levels -->
    <section class="py-28 bg-gradient-to-b from-[#0a0808] to-[#111]">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold uppercase text-center tracking-wide !mb-16">
          Sponsorship Tiers
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {sponsorshipLevels.map((level) => (
            <div class="bg-white/[0.02] border border-white/10 rounded-lg overflow-hidden transition-all hover:-translate-y-1 hover:shadow-[0_20px_40px_rgba(0,0,0,0.3)]">
              <div class={`p-6 flex justify-between items-center border-b border-white/10 ${level.headerBg}`}>
                <span class={`text-xl font-bold uppercase tracking-wide ${level.nameColor}`}>{level.name}</span>
                <span class="text-lg font-semibold text-white/70">{level.amount}</span>
              </div>
              <ul class="!p-3 space-y-4">
                {level.benefits.map((benefit) => (
                  <li class="flex items-start gap-3 text-white/80 leading-relaxed">
                    <span class="w-1.5 h-1.5 rounded-full bg-mrover-accent mt-2 shrink-0"></span>
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        <p class="text-center text-white/50 italic mt-12">
          We also accommodate non-monetary donations and custom partnerships.
        </p>
      </div>
    </section>

    <!-- Donate -->
    <section class="py-24 bg-mrover-accent text-black">
      <div class="max-w-[1200px] mx-auto px-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-12 text-center md:text-left">
          <div class="max-w-xl">
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold uppercase mb-4 tracking-wide">
              Individual Donations
            </h2>
            <p class="text-lg leading-relaxed opacity-90">
              Support our mission with a donation of any size. All donors receive our newsletter and recognition on our website.
            </p>
          </div>
          <a
            href="https://leadersandbest.umich.edu/find/#!/give/basket/fund/933717"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-10 py-4 bg-black text-white font-semibold uppercase tracking-wide rounded whitespace-nowrap transition-all hover:bg-[#1a1a1a] hover:-translate-y-0.5 hover:shadow-[0_10px_30px_rgba(0,0,0,0.2)]"
          >
            Donate Now
          </a>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section class="py-28 bg-[#0a0808] text-center">
      <div class="max-w-[1200px] mx-auto px-8">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold uppercase mb-14 tracking-wide">
          Ready to Partner?
        </h2>
        <p class="text-lg text-white/60 mb-8">
          Reach out to discuss sponsorship opportunities
        </p>
        <a
          href="mailto:rover@umich.edu"
          class="inline-block text-2xl sm:text-3xl md:text-4xl font-semibold text-mrover-accent transition-all hover:drop-shadow-[0_0_20px_rgba(255,140,0,0.5)]"
        >
          rover@umich.edu
        </a>
      </div>
    </section>

    <!-- All Sponsors -->
    <AllSponsors />
  </div>
</BaseLayout>
