---
import BaseLayout from '@/layouts/BaseLayout.astro';
import roverInfo from '@/data/roverInfo.json';
import { RoversScene } from '@/components/rovers/RoversScene';

const reversedRovers = [...roverInfo];
const featuredRovers = reversedRovers.slice(0, 3);
const gridRovers = reversedRovers.slice(3);
---

<BaseLayout title="Rovers - University of Michigan Mars Rover Team">
  <RoversScene client:only="react" />

  <div class="relative z-10 pt-24 min-h-screen w-full overflow-x-hidden font-rajdhani">
    <!-- Header -->
    <header class="text-center px-4 pb-16">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold uppercase text-white mb-4" style="font-family: 'Panchang', sans-serif; text-shadow: 0 0 30px rgba(255, 140, 0, 0.3);">
        Our Rovers
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-white/60 uppercase tracking-[0.2em]">
        A history of innovation and exploration
      </p>
    </header>

    <!-- Featured Rovers (Newest 3) -->
    <section class="max-w-[1400px] mx-auto px-8 pb-16 flex flex-col gap-12">
      {featuredRovers.map((rover, index) => (
        <a
          href="#content"
          id={rover.year}
          class={`featured-card group flex bg-[#0e0e0e]/60 border border-white/10 rounded-lg overflow-hidden no-underline backdrop-blur-sm h-[400px] cursor-pointer transition-all duration-300 hover:-translate-y-1 hover:border-mrover-accent hover:shadow-[0_20px_40px_rgba(0,0,0,0.4)] ${index % 2 === 1 ? 'flex-row-reverse' : ''}`}
        >
          <div class="flex-[1.2] overflow-hidden relative">
            <div class="w-full h-full bg-cover bg-center transition-transform duration-500 group-hover:scale-105" style={`background-image: url('/${rover.image_path}');`}></div>
          </div>

          <div class={`flex-[0.8] p-12 flex flex-col justify-center ${index % 2 === 1 ? 'border-r border-white/5' : 'border-l border-white/5'}`}>
            <h3 class="text-5xl font-bold text-white leading-none m-0" style="font-family: 'Panchang', sans-serif;">{rover.year}</h3>
            <p class="text-2xl text-mrover-accent uppercase tracking-[0.15em] font-semibold mt-2 mb-6">{rover.name}</p>
            <div class="text-lg leading-relaxed text-white/70 mb-6">
              <p class="m-0">{rover.desc[0].substring(0, 150)}...</p>
            </div>
            <span class="inline-flex items-center text-white font-medium uppercase tracking-[0.1em] text-sm opacity-80 transition-all duration-300 group-hover:text-mrover-accent group-hover:opacity-100 group-hover:pl-2.5">
              Read More &rarr;
            </span>
          </div>

          <!-- Hidden data for JS -->
          <span class="hidden year">{rover.year}</span>
          <span class="hidden name">{rover.name}</span>
          <span class="hidden imageURL">{rover.image_path}</span>
          {rover.desc.map(para => (
            <span class="hidden desc">{para}</span>
          ))}
          {rover.slideshow.map(slide => (
            <span class="hidden slide">{slide}</span>
          ))}
        </a>
      ))}
    </section>

    <!-- Rover Tiles Grid (Rest) -->
    <section class="max-w-[1400px] mx-auto px-8 pb-16">
      <div class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-8">
        {gridRovers.map(rover => (
          <a
            href="#content"
            id={rover.year}
            class="rover-card group block relative aspect-4/3 rounded overflow-hidden border border-white/10 bg-[#0e0e0e]/40 backdrop-blur-sm no-underline cursor-pointer transition-all duration-300 hover:-translate-y-2 hover:border-mrover-accent hover:shadow-[0_20px_40px_rgba(0,0,0,0.4),0_0_20px_rgba(255,140,0,0.2)]"
          >
            <div class="w-full h-full bg-cover bg-center transition-transform duration-500 group-hover:scale-105" style={`background-image: url('/${rover.image_path}');`}></div>

            <!-- Hidden data for JS -->
            <span class="hidden year">{rover.year}</span>
            <span class="hidden name">{rover.name}</span>
            <span class="hidden imageURL">{rover.image_path}</span>
            {rover.desc.map(para => (
              <span class="hidden desc">{para}</span>
            ))}
            {rover.slideshow.map(slide => (
              <span class="hidden slide">{slide}</span>
            ))}

            <div class="absolute inset-0 bg-linear-to-t from-black/95 via-black/50 to-transparent flex flex-col justify-end p-6 transition-all duration-300 group-hover:from-black/95 group-hover:via-black/60 group-hover:to-black/20">
              <h3 class="text-4xl font-semibold text-white m-0 leading-none" style="font-family: 'Panchang', sans-serif;">{rover.year}</h3>
              <p class="text-lg text-mrover-accent mt-2 font-medium tracking-[0.1em] uppercase opacity-80 transition-opacity duration-300 group-hover:opacity-100">{rover.name}</p>
            </div>
          </a>
        ))}
      </div>
    </section>
  </div>

  <!-- Modal Overlay -->
  <div id="rover-modal" class="modal-overlay fixed inset-0 z-100 flex items-center justify-center p-8 hidden">
    <div class="modal-backdrop absolute inset-0 bg-black/85 opacity-0 transition-opacity duration-300"></div>
    <div class="modal-container relative max-w-content max-h-[90vh] w-full bg-[#0a0a0a]/95 backdrop-blur-2xl border border-white/10 border-l-4 border-l-mrover-accent rounded-lg shadow-[0_30px_60px_rgba(0,0,0,0.5)] opacity-0 scale-95 translate-y-5 transition-all duration-300 overflow-hidden">
      <div class="p-8 max-h-[90vh] overflow-y-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 items-center">
          <div>
            <div id="content-title"></div>
            <div id="content-text" class="prose-content"></div>
          </div>
          <div class="relative rounded-lg overflow-hidden border border-white/10">
            <div id="content-slideshow" class="w-full block"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script is:inline>
    let slideIndex = 0;

    function showSlides(n) {
      const slides = document.querySelectorAll('#content-slideshow .slide');
      if (!slides.length) return;

      if (n >= slides.length) { slideIndex = 0; }
      else if (n < 0) { slideIndex = slides.length - 1; }
      else { slideIndex = n; }

      slides.forEach((slide) => {
        slide.style.display = 'none';
      });
      slides[slideIndex].style.display = 'block';
    }

    window.plusSlides = function(n) {
      showSlides(slideIndex + n);
    }

    function openModal() {
      const modal = document.getElementById('rover-modal');
      const scrollbarWidth = window.innerWidth - document.documentElement.clientWidth;
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      document.body.style.paddingRight = scrollbarWidth + 'px';
      requestAnimationFrame(() => {
        modal.classList.add('visible');
      });
    }

    function closeModal() {
      const modal = document.getElementById('rover-modal');
      modal.classList.remove('visible');
      setTimeout(() => {
        modal.classList.add('hidden');
        document.body.style.overflow = '';
        document.body.style.paddingRight = '';
      }, 300);
    }

    document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('rover-modal');
      const backdrop = modal.querySelector('.modal-backdrop');

      backdrop.addEventListener('click', closeModal);

      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
          closeModal();
        }
      });

      document.querySelectorAll('a[href="#content"][id]').forEach(tile => {
        tile.addEventListener('click', function(event) {
          event.preventDefault();

          const year = this.querySelector('.year').textContent;
          const name = this.querySelector('.name').textContent;
          const descElements = this.querySelectorAll('.desc');
          const slideElements = this.querySelectorAll('.slide');

          const contentTitle = document.getElementById('content-title');
          contentTitle.innerHTML = `<h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-8 leading-tight" style="font-family: 'Panchang', sans-serif;">${year} <span class="text-mrover-accent mx-2">//</span> ${name}</h2>`;

          const contentText = document.getElementById('content-text');
          contentText.innerHTML = '';
          descElements.forEach(desc => {
            contentText.insertAdjacentHTML('beforeend', `<p class="text-lg leading-relaxed text-white/85 mb-6 font-light">${desc.textContent}</p>`);
          });

          const contentSlideshow = document.getElementById('content-slideshow');
          contentSlideshow.innerHTML = '';

          if (slideElements.length > 0) {
            slideElements.forEach(slide => {
              contentSlideshow.insertAdjacentHTML('beforeend',
                `<img class="slide w-full animate-fade" src="/${slide.textContent}">`
              );
            });

            if (slideElements.length > 1) {
              contentSlideshow.insertAdjacentHTML('beforeend', '<a class="prev absolute top-1/2 left-0 -mt-5 p-4 text-white font-bold text-2xl bg-black/50 cursor-pointer select-none z-10 rounded-r transition-colors hover:bg-mrover-accent" onclick="plusSlides(-1)">&#10094;</a>');
              contentSlideshow.insertAdjacentHTML('beforeend', '<a class="next absolute top-1/2 right-0 -mt-5 p-4 text-white font-bold text-2xl bg-black/50 cursor-pointer select-none z-10 rounded-l transition-colors hover:bg-mrover-accent" onclick="plusSlides(1)">&#10095;</a>');
            }

            slideIndex = 0;
            showSlides(0);
          }

          openModal();
        });
      });
    });
  </script>

  <style>
    @import url('https://api.fontshare.com/v2/css?f[]=panchang@400,500,600,700&display=swap');

    :global(body) {
      background: #0a0808 !important;
      color: white;
    }

    .modal-overlay.visible .modal-backdrop {
      opacity: 1;
    }

    .modal-overlay.visible .modal-container {
      opacity: 1;
      transform: scale(1) translateY(0);
    }

    .slide {
      display: none;
    }

    @keyframes fade {
      from { opacity: 0.4; }
      to { opacity: 1; }
    }

    .animate-fade {
      animation: fade 0.5s;
    }

    @media (max-width: 900px) {
      .featured-card {
        flex-direction: column !important;
        height: auto !important;
      }

      .featured-card > div:first-child {
        height: 250px;
        flex: none !important;
      }

      .featured-card > div:last-of-type {
        padding: 2rem !important;
        flex: none !important;
        border: none !important;
      }

      .featured-card h3 {
        font-size: 2.5rem !important;
      }
    }
  </style>
</BaseLayout>
