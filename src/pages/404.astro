---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Page Not Found - University of Michigan Mars Rover Team">
  <div class="min-h-[80vh] flex items-center justify-center bg-black">
    <div class="max-w-2xl mx-auto px-6 text-center">
      <!-- 404 Graphic -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-mrover-accent mb-4">404</h1>
        <div class="w-32 h-1 bg-michigan-blue mx-auto"></div>
      </div>

      <!-- Message -->
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Page Not Found</h2>
      <p class="text-lg text-white/70 mb-8 leading-relaxed">
        Looks like this rover got lost in the Mars desert. The page you're looking for doesn't exist or has been moved.
      </p>

      <!-- Navigation Options -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/">
          <button
            class="px-8 py-3 text-base font-semibold uppercase bg-mrover-accent text-black rounded-lg hover:bg-mrover-accent/90 shadow-md hover:shadow-lg transition-all cursor-pointer"
          >
            Go Home
          </button>
        </a>
        <a href="/about">
          <button
            class="px-8 py-3 text-base font-semibold uppercase bg-michigan-blue text-white rounded-lg hover:bg-michigan-blue/80 shadow-md hover:shadow-lg transition-all cursor-pointer"
          >
            Learn About Us
          </button>
        </a>
      </div>

      <!-- Quick Links -->
      <div class="mt-12 pt-8 border-t border-michigan-blue/50">
        <p class="text-sm text-white/50 mb-4">Quick Links:</p>
        <div class="flex flex-wrap gap-4 justify-center text-sm">
        <a href="/rovers" class="text-mrover-accent hover:text-mrover-accent/80 transition-colors">Rovers</a>
        <a href="/sponsor" class="text-mrover-accent hover:text-mrover-accent/80 transition-colors">Sponsors</a>
        <a href="/join" class="text-mrover-accent hover:text-mrover-accent/80 transition-colors">Join Us</a>
          <span class="text-michigan-blue">|</span>
          <a href="/contact" class="text-mrover-accent hover:text-mrover-accent/80 transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
